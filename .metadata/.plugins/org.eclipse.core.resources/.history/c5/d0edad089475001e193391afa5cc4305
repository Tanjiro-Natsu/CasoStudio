import javax.swing.filechooser.FileNameExtensionFilter;

public class Reader {
	static File o=null;
	private static String g="";
	
	public static File chooser(JPanel a) {
		JFileChooser chooser1=new JFileChooser("C:\\");   
        int returnVal1=chooser1.showOpenDialog(a);
        FileNameExtensionFilter filter1=new FileNameExtensionFilter("Text","txt");
        chooser1.setFileFilter(filter1);
        if(returnVal1==JFileChooser.APPROVE_OPTION){}
		return chooser1.getSelectedFile();
	}
	public static String reader(File a) {
		Scanner b=null;
		try {
			b=new Scanner(a); 
		}
		catch(IOException e) {}
		catch(Exception  e) {}
		finally {
			int t=0;
			while(b.hasNext()) {
				System.out.println(b.nextLine());
				/*if(t==0) {
					g=b.nextLine();
				}
				else {
					g=g+" "+b.nextLine();
				}
				if(t==16) {
					t=0;
					g+=g+"\n";
				}
				t++;*/
			}
		}
		b.close();
		return g;
	}
	public static void main(String [] args) {
		JFrame k=new JFrame();
	JButton h=new JButton("Ciao");
	final JPanel d=new JPanel();
	d.add(h);
	k.add(d);
	k.setSize(400,400);
	k.setVisible(true);
	
	h.addActionListener(new ActionListener() {public void actionPerformed(ActionEvent e) {if(e.getActionCommand().equals("Ciao")) {o=Reader.chooser(d);Reader.reader(o);}}});
	
	}

