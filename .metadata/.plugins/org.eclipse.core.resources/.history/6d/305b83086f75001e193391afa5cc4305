package main;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JPanel;
import javax.swing.JTextArea;

public class WriteInformation extends JFrame{
	private JTextArea area=new JTextArea();
	public WriteInformation() {
		setTitle("Writer");
		setSize(800,600);
		setLayout(new BorderLayout());
		JPanel s=new JPanel();
		s.setLayout(new GridLayout(1,4));
		JButton save=new JButton("Save");
		JButton imp=new JButton("Import");
		s.add(new JLabel());
		s.add(imp);
		s.add(save);
		s.add(new JLabel());
		add(s,BorderLayout.SOUTH);
		JPanel h=new JPanel();
		JMenuBar t=new JMenuBar();
		JMenu k=new JMenu("Size");
		JMenu k1=new JMenu("Character");
		JMenu k2=new JMenu("Color");
		t.add(k);
		t.add(k1);
		t.add(k2);
		setJMenuBar(t);
		h.setLayout(new GridLayout(4,1));
		h.add(new JLabel("    "));
		h.add(new JLabel("    "));
		h.add(new JLabel("    "));
		h.add(new JLabel("    "));
		add(h,BorderLayout.NORTH);
		add(new JLabel("             "),BorderLayout.WEST);
		add(new JLabel("             "),BorderLayout.EAST);
		add(area,BorderLayout.CENTER);
		setVisible(true);
	}

}
