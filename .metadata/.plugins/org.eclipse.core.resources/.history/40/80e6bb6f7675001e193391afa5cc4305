		z1.addActionListener(new ActionListener() {public void actionPerformed(ActionEvent e) {
			StyledDocument doc = d.getStyledDocument();
			javax.swing.text.Style style = d.addStyle("", null);
			StyleConstants.setForeground(style, q1);
			StyleConstants.setBackground(style, Color.white);
			String g=d.getText();
			while(g.equals(d.getText())) {}
			String g1[]=d.getText().split(" ");
			try {
				doc.insertString(doc.getLength(),g1[g1.length-1], style);
			} catch (BadLocationException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
	
		}});
		z2.addActionListener(new ActionListener() {public void actionPerformed(ActionEvent e) {d.setForeground(q2);}});
		z3.addActionListener(new ActionListener() {public void actionPerformed(ActionEvent e) {d.setForeground(q3);}});
